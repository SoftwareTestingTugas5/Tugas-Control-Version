#include<iostream.h>
float z;
void pembagian(x,y){
z= x/y;
}
void perkalian(x,y){
	z=x*y;
}
void pertambahan(x,y){
	z= x+y;
}

void main(){
	int x,y;
	int plh;

	cout << "Perhitungan Dasar" << endl;
	cout << "masukan nilai1 = ";cin >> x;
	cout << "masukan nilai2 = ";cin >> y;
	cout << "1. penjumlahan" << endl << "2. perkalian" << endl <<"3. pembagian"<<endl;
	cout << "masukan pilihan: "; cin >> plh;

	if(plh==1){
		pertambahan(x,y);
		cout << "hasil penjumlahan = " << z << endl;
	}else
		if(plh==2){
			perkalian(x,y);
			cout << "hasil perkalian = " << z << endl;
		}
	else
		if(plh==3){
			pembagian(x,y);
			cout<<"hasil pembagian = "<< z <<endl ;
		}
		else{
			cout << "pilihan tidak tersedia!!";
		}
}